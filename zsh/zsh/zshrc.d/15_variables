export ORIGHOME=$HOME

export TIMEFMT="%*E real  %*U user  %*S system  %P  %J"

export EDITOR=vim
export BROWSER=xdg-open
export MAIL=${MAIL:-/var/mail/$USER}

export PAGER=${PAGER:-less}

export LESS='-iRX-P%f ?m(file %i/%m) .lines %lt-%lb?L/%L. ?e(END)?x - Next\\: %x.:?PB%PB\\%..%t'
export LESSHISTFILE=$XDG_CACHE_HOME/lesshst
export LESSKEY=$XDG_CACHE_HOME/less

eval $(dircolors -b $ZDOTDIR/dircolors) 2>/dev/null || :

# http://nion.modprobe.de/blog/archives/572-less-colors-for-man-pages.html
# see 'man 5 termcap'
export LESS_TERMCAP_md=$'\e[1;31m'  # start bold mode     => bold red
export LESS_TERMCAP_mb=$'\e[1;31m'  # start blinking      => bold red
export LESS_TERMCAP_so=$'\e[30;47m' # start standout mode => black on white
export LESS_TERMCAP_se=$'\e[0m'     # end standout mode   => turn off all attrs
export LESS_TERMCAP_us=$'\e[1;32m'  # start underlining   => bold green
export LESS_TERMCAP_ue=$'\e[0m'     # end underlining     => turn off all attrs
export LESS_TERMCAP_me=$'\e[0m'     # end all modes       => turn off all attrs

# make less more friendly for non-text input files, see lesspipe(1)
[[ -x /usr/bin/lesspipe ]] && eval "$(lesspipe)"

export GREP_OPTIONS='--color=auto'
# export UNZIP=-L # interferes with things like Java class file names

export DEBEMAIL="jan@majutsushi.net"
export DEBFULLNAME="Jan Larres"
export BTS_CACHE=no

export GDK_USE_XFT=1
export QT_XFT=1
#export GTK_IM_MODULE="scim"
if [[ "$(hostname)" == "gally" ]]; then
    export ALSA_OUTPUT_PORTS="65:0"
    export SCUMMVM_PORT=$ALSA_OUTPUT_PORTS
elif [[ "$(hostname)" == "urd" ]]; then
    export ALSA_OUTPUT_PORTS="128:0"
    export SCUMMVM_PORT=$ALSA_OUTPUT_PORTS
fi

export SDL_AUDIODRIVER=alsa
# export SDL_AUDIODRIVER=dsp # oss

# export TEXMFHOME=$HOME/.texmf

# export RUBYOPT="-w $RUBYOPT"
export RI="-f ansi"

export TERMINFO=$HOME/.terminfo

export CCACHE_DIR=$XDG_CACHE_HOME/ccache
export CCACHE_COMPRESS=1
export CCACHE_HASHDIR=1

export NNTPSERVER=news.gmane.org

export GPG_TTY=$(tty)

export NETHACKOPTIONS=@$HOME/.etc/nethackrc

# for java; XToolkit is the new one, but it doesn't work everywhere
# export AWT_TOOLKIT=XToolkit
# export AWT_TOOLKIT=MToolkit

# update session environment variables if they got changed after re-attaching
# a tmux session
if [[ -n "$TMUX" ]]; then
    _update_from_tmux() {
        VARS="$(tmux show-environment)"
        for VAR in ${(f)VARS}; do
            # only export non-removed variables
            if [[ "${VAR#-}" == "${VAR}" ]]; then
                export "$VAR"
            fi
        done
    }
    add-zsh-hook preexec _update_from_tmux
fi

