# handle deleted and then recreated directories
_dir_cycle() {
    if ! [[ . -ef $PWD ]]; then
        if ! cd -- "${PWD}" >/dev/null 2>&1; then
            echo "W: ${PWD} does no longer exist"
            return 1
        fi
    fi
}
add-zsh-hook precmd _dir_cycle

if [[ -f $HOME/.zshrc.local ]]; then
    source $HOME/.zshrc.local
fi

# vim: filetype=zsh
