rationalize_path() {
    eval $1'=( ${(u)^'${1}':a}(N-/xe:'\''[[ "$REPLY" != "." ]]'\'':) )'
}

fpath=(
    "$ZDOTDIR/func"
    "$HOME/.etc/zsh/zsh-completions/src"
    $fpath
)
rationalize_path fpath

# cdpath=(.. ~)
rationalize_path cdpath

typeset -gxT LIBRARY_PATH library_path
typeset -gxT LD_LIBRARY_PATH ld_library_path

# vim: filetype=zsh
