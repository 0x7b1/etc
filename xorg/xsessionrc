export XDG_CONFIG_DIRS=/etc/xdg
export XDG_CACHE_HOME=$HOME/.cache

export LD_LIBRARY_PATH=$HOME/lib

export PATH=$HOME/bin:$HOME/.etc/bin:/usr/games:/var/lib/gems/1.8/bin:$PATH
