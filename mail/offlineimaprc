[general]
accounts = Main
ui = ttyui
pythonfile = ~/.etc/mail/offlineimap-helpers.py
metadata = ~/.var/lib/offlineimap
fsync = False

[Account Main]
localrepository = Local
remoterepository = Remote
autorefresh = 10
holdconnectionopen = yes
keepalive = 60
postsynchook = mu index -q

[Repository Local]
type = Maildir
localfolders = ~/Maildir
nametrans = lambda folder: 'INBOX' if len(folder) == 0 else re.sub('^.', '', folder)

[Repository Remote]
type = IMAP
remotehost = mail.majutsushi.net
remoteport = 993
remoteuser = jan
remotepasseval = get_password()
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
nametrans = lambda folder: '' if folder == 'INBOX' else '.' + folder
# idlefolders = ['INBOX']

