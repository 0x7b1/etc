function! Utl_AddressScheme_mutt(uri, fragment, dispMode)
    let delimit = stridx(a:uri, ':')
    let mid     = strpart(a:uri, delimit + 1)

    if $TERM =~# 'screen\|tmux'
        let cmd = 'screen '
    elseif executable('urxvt')
        let cmd = 'urxvt -e '
    else
        let cmd = 'xterm -e '
    endif

    let cmd .= expand('~/.etc/bin/mutt-open') . ' ' . mid
    call system(cmd)

    return []
endfunction

