unified = 8

[merge-tools]
splice.executable = vim
splice.args = -f $base $local $other $output -c 'SpliceInit'
splice.premerge = keep
vimdiff.executable = vim
vimdiff.args = -d $base $local $output $other +close +close

[extdiff]
cmd.wdiff = diff
opts.wdiff = -p -U 8 -w -r -N

[pager]
